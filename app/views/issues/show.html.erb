<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <!-- Header Section -->
    <div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">
          <%= @issue.title %>
        </h1>
        <span class="<%= status_badge_class(@issue.status) %>">
          <%= @issue.status.humanize %>
        </span>
      </div>
      <p class="mt-1 text-sm text-gray-500">
        <%= @issue.project.title %> • Created <%= time_ago_in_words(@issue.created_at) %> ago
      </p>
    </div>

    <!-- Content Section -->
    <div class="px-6 py-5">

        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-gray-500">Priority</h3>
            <p class="mt-1 text-sm text-gray-900">
              <span class="<%= priority_badge_class(@issue.priority) %>">
                <%= @issue.priority.humanize %>
              </span>
            </p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Created</h3>
            <p class="mt-1 text-sm text-gray-900">
              <%= @issue.created_at.strftime("%B %d, %Y") %>
            </p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Last Updated</h3>
            <p class="mt-1 text-sm text-gray-900">
              <%= @issue.updated_at.strftime("%B %d, %Y at %H:%M") %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
      <div class="flex space-x-4">
      
        <%= link_to edit_issue_path(@issue), class: "inline-flex pr-5 items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          Edit
        <% end %>
        <div>

          <%= button_to issue_path(@issue), method: :delete, 
                data: { confirm: "Are you sure you want to delete this issue?" },
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm border-gray-300 font-medium rounded-md shadow-sm text-gray-300 bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5 text-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>

      <div class="mt-6">
    <%= link_to project_issues_path(@project), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
      ← Back to Issues
    <% end %>
  </div>
    </div>
  </div>
</div>
