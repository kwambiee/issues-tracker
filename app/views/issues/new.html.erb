<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">New Issue</h1>
    <p class="mt-1 text-sm text-gray-500">Create a new issue for <%= @project.title %></p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= render "form", project: @project, issue: @issue %>
  </div>

  <div class="mt-6">
    <%= link_to projects_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
      ‚Üê Back to Projects
    <% end %>
  </div>
</div>