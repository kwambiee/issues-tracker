<div class="container">
  <h1 class="text-center mb-4">Issues Report - <%= Date.today %></h1>
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Project</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @issues.each do |issue| %>
        <tr>
          <td><%= issue.id %></td>
          <td><%= issue.title %></td>
          <td><%= issue.status.humanize %></td>
          <td><%= issue.priority.humanize %></td>
          <td><%= issue.project.title %></td>
          <td><%= issue.created_at.strftime('%Y-%m-%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>