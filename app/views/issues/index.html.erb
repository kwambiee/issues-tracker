<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">Issues</h1>
  <%= link_to 'New Issue', new_project_issue_path(@project), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>

<div class="flex space-x-2 mb-4">
  <%= link_to 'Export Excel', project_issues_path(@project,format: :xlsx), 
        class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
        
  <%= link_to 'Export PDF', project_issues_path(@project,format: :pdf), 
        class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700",
        target: '_blank' %>
</div>


<div class="overflow-x-auto">
  <table class="min-w-full bg-white rounded-lg overflow-hidden">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-6 py-3 text-left">Title</th>
        <th class="px-6 py-3 text-left">Status</th>
        <th class="px-6 py-3 text-left">Priority</th>
        <th class="px-6 py-3 text-left">Project</th>
        <th class="px-6 py-3 text-left">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <%= render  @issues %>
    </tbody>
  </table>
  <div class="mt-6">
    <%= link_to projects_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
      ‚Üê Back to Projects
    <% end %>
  </div>
</div>