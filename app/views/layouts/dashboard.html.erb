<%= content_for :html_head do %>
  <%= yield :html_head %>
<% end %>

<div class="container mx-auto px-4 py-6">
  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Projects Section -->
    <div class="lg:w-1/3 bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-800">Projects</h2>
        <%= link_to new_project_path, class: "btn-primary" do %>
          <i class="fas fa-plus mr-1"></i> New Project
        <% end %>
      </div>
      <%= render @projects %>
    </div>

    <!-- Issues Section -->
    <div class="lg:w-2/3 bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-800">Issues</h2>
        <div class="flex space-x-2">
          <%= link_to new_issue_path, class: "btn-primary" do %>
            <i class="fas fa-plus mr-1"></i> New Issue
          <% end %>
          <%= link_to charts_path, class: "btn-secondary", data: { turbo_frame: "modal" } do %>
            <i class="fas fa-chart-bar mr-1"></i> View Charts
          <% end %>
        </div>
      </div>
      <%= render @issues %>
    </div>
  </div>
</div>