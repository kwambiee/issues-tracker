<%= form_with(model: project) do |form| %>
  <div class="space-y-4 mt-4">
    <div>
      <%= form.label :title, class: "block text-sm font-bold text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 p-4 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-bold text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "mt-1 p-4 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="flex justify-end space-x-2">
      <%= link_to 'Cancel', projects_path, class: "px-4 py-2 border rounded-md" %>
      <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  </div>
<% end %>