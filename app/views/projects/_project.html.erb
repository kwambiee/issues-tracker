<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <h2 class="text-xl font-semibold mb-2">
    <%= link_to project.title, project, class: "text-blue-600 hover:underline" %>
  </h2>

  <p class="text-gray-600 mb-4">
    <%= truncate(project.description, length: 100) %>
  </p>

  <div class="flex flex-wrap gap-3 mt-4">
    <%= link_to 'View Issues', project_issues_path(project),
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-blue-700 bg-blue-100 hover:bg-blue-200 rounded-md transition" %>

    <%= link_to 'Edit', edit_project_path(project),
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-yellow-700 bg-yellow-100 hover:bg-yellow-200 rounded-md transition" %>

    <%= button_to 'Delete', project,
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-red-700 bg-red-100 hover:bg-red-200 rounded-md transition" %>
  </div>
</div>
